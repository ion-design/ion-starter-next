{
  "name": "ion-starter",
  "version": "0.0.0",
  "scripts": {
    "dev": "node .ion/babel/babel-processor.js && mkdir -p .ion-target/public && cp .ion/scripts/injection-script.js .ion-target/public/ion-injection.js && concurrently \"node .ion/scripts/watch.js\" \"cd .ion-target && bun install && bun next dev -p 3000\"",
    "build": "node .ion/babel/babel-processor.js && mkdir -p .ion-target/public && cp .ion/scripts/injection-script.js .ion-target/public/ion-injection.js && cd .ion-target && bun install && bun next build",
    "serve": "cd .ion-target && bun next start -p 3000",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --quiet || true",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:css": "postcss src/**/*.css --config postcss.config.js --output /dev/null || true",
    "typecheck": "tsc --noEmit || true"
  },
  "dependencies": {
    "@fontsource/inter": "^5.1.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.456.0",
    "next": "^16.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-syntax-jsx": "^7.27.1",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/types": "^7.28.5",
    "@types/node": "^22.0.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "autoprefixer": "^10.4.14",
    "chokidar": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.21",
    "postcss-cli": "^11.0.1",
    "postcss-preset-env": "^7.8.2",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.0"
  }
}
